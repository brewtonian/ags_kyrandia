// room script file


function room_AfterFadeIn()
{
  String description = Room.GetTextProperty("Room Name");
  LabelStatus.Text = description;
  
  aForest.Play();
    
  if(player.PreviousRoom == 2)
  {
    aPoolOfSorrows.Stop();
    player.Walk(player.x - 20, player.y, eBlock, eWalkableAreas);
  }
}


function room_LeaveRight()
{
  player.ChangeRoom(2, 10, 115, eDirectionRight);
}
